{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "baseUrl": "./",
    "outDir": "dist",
    "incremental": true,
    "skipLibCheck": true
  },
  "include": ["./**/**.ts"],
  "exclude": ["node_modules"]
}
